# Root logger option  . Possible Options : TRACE,DEBUG,INFO,WARN,ERROR,FATAL,ALL
log4j.rootLogger=ALL

log4j.category.DCC_System_Error_Handling_Log=ALL, DCC_System_Error_Handling_Log
log4j.additivity.iRBLSysCheckIntegrationLogger=false

log4j.appender.DCC_System_Error_Handling_Log=org.apache.log4j.RollingFileAppender  
log4j.appender.DCC_System_Error_Handling_Log.File=Logs/DCC_System_Error_Handling_Log/DCC_System_Error_Handling_Log.xml
log4j.appender.DCC_System_Error_Handling_Log.MaxFileSize=10000KB
log4j.appender.DCC_System_Error_Handling_Log.MaxBackupIndex=100
log4j.appender.DCC_System_Error_Handling_Log.layout=org.apache.log4j.PatternLayout
log4j.appender.DCC_System_Error_Handling_Log.layout.ConversionPattern=[%5p] %d{dd-MMM-yyyy HH:mm:ss} (%F:%L)%n%m%n%n